        xmlns:dxc="clr-namespace:SharpDX.WPF;assembly=SharpDX.WPF"
        xmlns:local="clr-namespace:BetterSharpDXWPFIntegration"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <dxc:DXElement>
            <dxc:DXElement.Renderer>
